<%- include('./partials/_dashboard_nav') %>

<%- include('partials/_mobile_nav') %>

<main class="ps-main">
    <div class="ps-container">
        <div class="ps-cart-listing ps-table--whishlist">
            <table class="table ps-cart__table">
            <thead>
                <tr>
                <th>All Products</th>
                <th>Price</th>
                <th>View</th>
                <th> Remove from wishlist </th>
                </tr>
            </thead>
            <tbody>
               <% user.wishlist.forEach((item) => {  %>
                <tr>
                    <td><a class="ps-product__preview" href="product-detail.html"><img class="mr-15" src="<%= item.image %>" alt=" <%= item.image %> "><%= item.name %></a></td>
                    <td> &#8377; <%= item.price %></td>
                    <td><a class="ps-product-link" href="/store/<%= item.product_id %>">View Product</a></td>
                    <td>
                       <a href="/removefromwishlist/<%= item.product_id %>" class="ps-remove">  </a>
                    </td>
                    </tr>
               <% }); %>
            </tbody>
            </table>
        </div>
    </div>
</main>


<%- include ('./partials/_footer') %>