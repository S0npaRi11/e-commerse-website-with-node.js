<% if(user){ %>
    <%- include('./partials/_dashboard_nav') %>
<% }else{ %>
    <%- include('./partials/_navbar') %>
<% } %>

<%- include('./partials/_mobile_nav') %>
    <main class="ps-main">
        <div class="ps-section__header mb-50 container">
            <h3 class="ps-section__title" data-mask="<%= product %>">- <%= brand %></h3>
        </div>
        <div class="container">
            <div class="ps-section__content pt-20">
            <div class="masonry-wrapper" data-col-md="3" data-col-sm="2" data-col-xs="1" data-gap="30" data-radio="100%">
                <div class="ps-masonry">
                    <% if(inventories.length != 0){ %>
                        <% inventories.forEach(function (inventory) { %>
                            <a href="/<%= inventory.id %>">
                                <div class="grid-sizer"></div>
                                <div class="grid-item kids">
                                    <div class="grid-item__content-wrapper row">
                                        <div class="ps-shoe mb-10">
                                            <div class="ps-shoe__thumbnail col-xs-5">
                                                <img src="../../<%= inventory.image %>" alt="<%= inventory.name %> "><a class="ps-shoe__overlay" href="/product/<%= inventory.id %>"></a>
                                            </div>
                                            <div class="ps-shoe__content col-xs-7" style="width: 160px; position: static; padding: 0;">
                                                <div class="ps-shoe__detail"><a class="ps-shoe__name" href="/product/<%= inventory.id %>">    <%= inventory.name %>  </a>
                                                    <p class="ps-shoe__categories">  <%= inventory.brand %>  </p><span class="ps-shoe__price">
                                                        &#8377; <%= inventory.price %> </span>
                                                </div>

                                                <div class="row action-buttons">
                                                    <div class="col-xs-6"><a class="btn btn-primary favorite-action" href="/dashboard/wishlist/add/<%=inventory.id%>"><i class="fa fa-heart"></i></a></div>
                                                    <div class="col-xs-6"><a class="btn btn-primary add-to-cart-action" href="/cart/add/<%=inventory.id%>"><i class="fa fa-shopping-cart"></i></a></div>
                                                  </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </a>
                            <% }) %> 
                    <% }else{ %>
                        <p> No such product found. </p>
                    <% } %>
                    
                </div>
            </div>
        </div>
        </div>
    </div>

<%- include('./partials/_footer') %>