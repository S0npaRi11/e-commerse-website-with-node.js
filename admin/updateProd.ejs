<%- include('_navbar') %>

<main class="ps-main">
  <div class="ps-contact ps-section pb-80">
    <div class="ps-container" style="margin: 0 auto;">
      <div class="row">
        <div class="col-lg-12">
            <h2 class="ps-section__title" data-mask="update ">- Update Products</h2>
        </div>
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 ">
          <div class="ps-section__header mb-50">
            <form class="ps-contact__form" action="/updateProducts" method="post" enctype="multipart/form-data">
              <div class="row">   
                    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 ">
                        <div class="form-group">
                          <label>Id <sub>*</sub></label>
                          <input class="form-control" type="text" placeholder="" name="id" id="id" value="<%= product.id %>">
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 ">
                      <div class="form-group">
                        <label>Class <sub>*</sub></label>
                        <input class="form-control" type="text" placeholder="" name="class" id="class" value="<%= product.class %>">
                      </div>
                    </div>
                    <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12 ">
                      <div class="form-group">
                        <label>Brand <sub>*</sub></label>
                        <input class="form-control" type="text" placeholder="" name="brand" id="brand" value="  <%= product.brand %> ">
                      </div>
                    </div>
                    <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12 ">
                      <div class="form-group">
                        <label>Name <sub>*</sub></label>
                        <input class="form-control" type="text" placeholder="" name="name" id="name" value="  <%= product.name %> ">
                      </div>
                    </div>
                    <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12 ">
                      <div class="form-group">
                        <label>Price <sub>*</sub></label>
                        <input class="form-control" type="text" placeholder="" name="price" id="price" value=" <%= product.price %> ">
                      </div>
                    </div>
                    <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12 ">
                      <div class="form-group">
                        <label>stock <sub>*</sub></label>
                        <input class="form-control" type="text" placeholder="" name="stock" id="stock" value=" <%= product.stock %> ">
                      </div>
                    </div>
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 ">
                      <div class="form-group">
                        <label>Image <sub>*</sub></label>
                        <input class="form-control" type="file" placeholder="" name="image" id="image" value="">
                      </div>
                    </div>
                    <div class="form-group mb-25">
                      <label>Description <sub>*</sub></label>
                      <textarea class="form-control" rows="6" name="description" id="description" placeholder=" <%= product.description %> ">
                        <%= product.description %>
                      </textarea>
                    </div>
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 ">
                      <div class="form-group">
                        <button class="ps-btn">Update Product<i class="ps-icon-next"></i></button>
                      </div>
                    </div>
                </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>

